# ============================================
# AI SERVICE CONFIGURATION (Choose ONE)
# ============================================

# Option 1: OpenAI (RECOMMENDED)
# Get your key at: https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4o-mini
OPENAI_MAX_TOKENS=1000
OPENAI_TEMPERATURE=0.85

# Option 2: Google Gemini (FALLBACK - FREE TIER)
# Only used if OPENAI_API_KEY is not set
# Get your key at: https://makersuite.google.com/app/apikey
# GEMINI_API_KEY=your_gemini_api_key_here
# GEMINI_MODEL=gemini-1.5-flash
# GEMINI_MAX_TOKENS=1000
# GEMINI_TEMPERATURE=0.85

# ============================================
# WHATSAPP CONFIGURATION
# ============================================
WHATSAPP_SESSION_NAME=sara_whatsapp_session

# ============================================
# DATABASE CONFIGURATION
# ============================================
DATABASE_URL=./data/database.sqlite

# ============================================
# APPLICATION CONFIGURATION
# ============================================
NODE_ENV=development
PORT=3000
LOG_LEVEL=info

# ============================================
# RATE LIMITING
# ============================================
RATE_LIMIT_MAX_MESSAGES=10
RATE_LIMIT_WINDOW_MS=60000

# ============================================
# BOT CONFIGURATION
# ============================================
BOT_NAME=Sara AI
BOT_PREFIX=!
ADMIN_NUMBERS=+5511999999999

# ============================================
# FEATURES
# ============================================
ENABLE_MEDIA_PROCESSING=true
ENABLE_GROUP_RESPONSES=false
MAX_CONTEXT_MESSAGES=10

# ============================================
# MCP INTEGRATIONS (Optional)
# ============================================
# GitHub MCP - Get token at: https://github.com/settings/tokens
# Required scopes: repo, read:org
# GITHUB_TOKEN=your_github_personal_access_token_here